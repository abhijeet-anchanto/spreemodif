<!doctype html>
<!--[if lt IE 7 ]> <html class="ie ie6" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie ie7" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie ie8" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie ie9" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if gt IE 9]><!--><html lang="<%= I18n.locale %>"><!--<![endif]-->
  <head data-hook="inside_head">
    <%= render :partial => 'spree/shared/head' %>
  </head>
<body class="<%= body_class %>" id="<%= @body_id || 'default' %>" data-hook="body" >
    <script type="text/javascript">
      $(function(){
        $('.carousel').carousel();
      });
    </script>
    <style>
	.progress-steps li.current-first, .progress-steps li.current {
		background-color: #00adee;
		color: #fff;
		border-left: 5px solid #00adee;
		border-right: 5px solid #00adee;
	}
	.progress-steps li span {
		color: rgb(175, 137, 137)!important;
	}
.progress-steps li {
 color : black !important;
}
      .nowrap{
		margin-bottom: -4px!important;
	}
      .add-to-cart #add-to-cart-button {
        margin-left: 0px!important;
      }
      #sidebar {
        margin-left: 0px!important; 
        background : whitesmoke !important;      
      }
      .nav-data li{
        font-size: 22px;
        margin: 16px;
        float : left;
      }


      .carousel img {
        width : 100%;
      }
    </style>
    <style>
      #breadcrumbs{background-color: #F5F5F5;
                   border-radius: 4px 4px 4px 4px;
                   list-style: none outside none;
                   margin: 0 0 20px;
                   padding: 8px 15px;}
      ul#products li {
        background: whitesmoke;
        margin: 13px;
      }
      ul#products li a.info {
        background: none repeat scroll 0 0 rgba(0, 0, 0, 0.75)!important;
        color: white !important;
        height: 45px !important;
      }
      ul#products li 
      {
        width: 178px;

      }
      #sidebar{
        background: rgb(213, 164, 164);
      }
      .product-image img {
        max-width: 163%;
        width: 190px;
      }
      input.gray[type="submit"], input.gray[type="button"], input.gray[type="reset"], button.gray, a.button.gray {
        margin-top: 12px;
        font-family :"Ubuntu",sans-serif ;
      }




      #checkout
      {background: whitesmoke;
       padding-left: 6px;
       padding-top: 6px;}
      </style>
    <div class="container" >
      <div class = "row-fluid">	
        <div class = "row-fluid">
          <div class = "span3">
            <%= link_to image_tag("IUTFinalLogo.jpg",:width => "220") , "/" %>
          </div>
          <div class= "span1"></div>
          <div class = "span8">
            <div class = "row-fluid"></div>
            <div class = "row-fluid">	   
              <ul class=" nav pull-right nav-data" >
                <li id="home-link" class="active " data-hook><%= link_to t(:home), root_path %></li>
                <li id="link-to-cart" data-hook><%= link_to_cart %></li>
                <li class="divider-vertical"></li>
                <%= render :partial => 'spree/shared/nav_bar' %>
              </ul>

            </div>
            <div class = "row-fluid"></div> 
          </div>
        </div>
        <div id="promo-sale-container" class="row-fluid" style="top: 120px;position: absolute;"><div id="promo-sale"><!-- InstanceBeginEditable name="Content" --><div class="column1" style = "float: left;"><img src="/assets/ribbon-left.png" width="520" height="28"></div>
            <div class="column2"><img src="/assets/bow.png" width="153" height="104" style="float: left;margin-top: -17px;float: left;
                                      "></div>
            <div class="column3"><img src="/assets/ribbon-right.png" alt="Click For Details" width="267" height="28"></div></div>
        </div>
        <%= render :partial => 'spree/shared/header' %>

        <br/>
        <div class = "row-fluid" style="margin-top: -21px;">
          <div class = "span12">
            <div class="carousel slide">
              <!-- Carousel items -->
              <div class="carousel-inner" >
                <div class="active item"> <img src="/assets/image1.jpg"/>
                  <div class="carousel-caption">
                  </div>
                </div>
                <div class="item"> <img src="/assets/image5.jpg"/>
                  <div class="carousel-caption">
                  </div>
                </div>

              </div>


            </div>
            <div id="wrapper" class="row-fluid" data-hook>

              <%= breadcrumbs(@taxon) %>

              <%= render :partial => 'spree/shared/sidebar' if content_for? :sidebar %>

              <div id="content" class="span<%= !content_for?(:sidebar) ? '12' : '8' %>" data-hook>
                <%= flash_messages %>
                <%= yield %>
              </div>

            </div>

<%#= render :partial => 'spree/shared/footer' %>

          </div>

          <%= render :partial => 'spree/shared/google_analytics' %>
        </div>
      </div>
    </div>
    <div class="footer">
        &copy; 2013 . shopping cart
      </div>
</body>
</html>
