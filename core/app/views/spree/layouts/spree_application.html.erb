<head data-hook="inside_head">
    <%= render :partial => 'spree/shared/head' %>
  </head>
  <body class="<%= body_class %>" id="<%= @body_id || 'default' %>" data-hook="body" style = "background: url('/assets/ss.jpg') repeat scroll 0 0 transparent !important;" >
<script type="text/javascript">
      $(function(){
        $('.carousel').carousel();
      });
  </script>
<style>
.carousel img {
width : 100%;
}
</style>
<style>
#breadcrumbs{background-color: #F5F5F5;
border-radius: 4px 4px 4px 4px;
list-style: none outside none;
margin: 0 0 20px;
padding: 8px 15px;}
ul#products li {
background: whitesmoke;
}
ul#products li a.info {
    background: none repeat scroll 0 0 rgba(0, 0, 0, 0.75)!important;
    color: white !important;
    height: 45px !important;
}
ul#products li 
{
width: 178px;

}
#sidebar{
background: rgb(213, 164, 164);
}
.product-image img {
max-width: 163%;
width: 190px;
}
input.gray[type="submit"], input.gray[type="button"], input.gray[type="reset"], button.gray, a.button.gray {
    margin-top: 12px;
font-family :"Ubuntu",sans-serif ;
}
</style>
<%= render :partial => 'spree/shared/header' %>
    <div class="container-fluid">
	<div class = "row-fluid">
		<div class = "span12">
			<div class="carousel slide">
			<!-- Carousel items -->
			<div class="carousel-inner" style = "height: 273px !important;" >
			  <div class="active item"> <img src="/assets/chairs_hub_banner.jpg"/>
			   <div class="carousel-caption">
				            
			    </div>
			  </div>
			  <div class="item"> <img src="/assets/Dining_Chairs_Banner_Image.jpg"/>
			   <div class="carousel-caption">
			      
			    </div>
			  </div>
		 
			</div>


		 </div>
		    <div id="wrapper" class="row-fluid" data-hook>

			<%= breadcrumbs(@taxon) %>

			<%= render :partial => 'spree/shared/sidebar' if content_for? :sidebar %>
			
			<div id="content" class="span<%= !content_for?(:sidebar) ? '12' : '8' %>" data-hook>
			  <%= flash_messages %>
			  <%= yield %>
			</div>

		      </div>
<div class="footer">
    &copy; 2013 . shopping cart
  </div>
		      <%#= render :partial => 'spree/shared/footer' %>

		    </div>

		    <%= render :partial => 'spree/shared/google_analytics' %>
	</div>

  </body>
</html>
